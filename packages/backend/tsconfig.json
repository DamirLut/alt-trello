{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "moduleResolution": "Node",
    "module": "ES2022",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": "./",
    "baseUrl": "./",

    "paths": {
      "#common/*": ["./src/common/*"],
      "#config/*": ["./src/config/*"],
      "#core/*": ["./src/core/*"],
      "#root/*": ["./src/*"]
    }
  }
}
